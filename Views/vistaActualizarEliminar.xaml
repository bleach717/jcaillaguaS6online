<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jcaillaguaS6online.Views.vistaActualizarEliminar"
             Title="vistaActualizarEliminar">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Actualizar /Eliminar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="txtCodigo"
               IsEnabled="False"/>
        <Entry x:Name="txtNombre"
               Placeholder="Actualice el nombre"/>
        <Entry x:Name="txtApellido"
               Placeholder="Actualice el apellido"/>
        <Entry x:Name="txtEdad"
               Placeholder="Actualice la edad"/>
        <Button x:Name="btnActaulizar"
                Text="Actualizar"
                Clicked="btnActaulizar_Clicked"/>
        <Button x:Name="brnEliminar"
                Text="Eliminar"
                Clicked="brnEliminar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>